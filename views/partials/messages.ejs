<% if (Object.keys(success_msg).length > 0) { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <p class="text-center"><%= success_msg %></p>

  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if (Object.keys(error_msg).length > 0) { %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <p class="text-center"><%= error_msg %></p>

  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if (typeof errors !== 'undefined') { %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <% errors.forEach((error) => { %>
  <p>Error : <%= error.msg %></p>
  <% }) %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
